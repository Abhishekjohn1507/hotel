{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "app/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "app/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "src": "/(.*)", "dest": "/app/dist/$1" },
    { "src": "/", "dest": "/app/dist/index.html" }
  ]
}
